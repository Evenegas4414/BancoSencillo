<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:rowCount="5"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Â¡Bienvenido a Banco!"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_columnSpan="2"
        android:layout_row="0"
        android:layout_column="0" />

    <TextView
        android:id="@+id/saldoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SALDO"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_row="1"
        android:layout_column="0" />

    <TextView
        android:id="@+id/saldoValueTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_row="1"
        android:layout_column="1" />

    <Button
        android:id="@+id/depositButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DEPOSITAR"
        android:layout_row="2"
        android:layout_column="0" />

    <EditText
        android:id="@+id/depositAmountEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:hint="Ingrese la cantidad a depositar"
        android:layout_row="2"
        android:layout_column="1" />

    <Button
        android:id="@+id/withdrawButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RETIRAR"
        android:layout_row="3"
        android:layout_column="0" />

    <EditText
        android:id="@+id/withdrawAmountEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:hint="Ingrese la cantidad a retirar"
        android:layout_row="3"
        android:layout_column="1" />

    <Button
        android:id="@+id/exitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SALIR"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_columnSpan="2" />

</GridLayout>
